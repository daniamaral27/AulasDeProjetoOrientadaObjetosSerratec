package exerciciosIndividuais;

public class Caneta {
	String modelo;
	String cor;
	float ponta;
	int carga;
	boolean tampada;
	
	void status() {
		System.out.println("Bic" + modelo + "\nUma caneta: " + cor + "\nA ponta é: " + ponta + "\nEstá com carga: " + carga + "\nEstá tampada: " + tampada);
		
	}
	
	void rabiscar () {
		if(this.tampada == true) {
			System.out.println("Não pode usar");
		} else {
			System.out.println("pode usar");
		}
		
	}
		
	void tampar () {
		this.tampada = true;
	}
			
	void destampar () {
		this.tampada = false;
		}
}




