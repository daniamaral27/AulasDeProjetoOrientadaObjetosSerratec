
public class Exercicio001 {

	public static void main(String[] args) {
		// Faça um programa que percorra números entre 0 e 30 e exiba a quantidade 
		//de números pares e impares.
			int NumeroPar = 0;
			int NumeroImpar = 0;
			
			for (int i = 0; i < 30; i++); {
				if(i % 2 == 0); { 
				NumeroPar += 1;
				
			} else {
				NumeroImpar += 1;
			}
								
				System.out.println("Esses são os números pares: " + NumeroPar);
				System.out.println("Esses são os números Impares: " + NumeroImpar);
				
			}
		
	}

}
