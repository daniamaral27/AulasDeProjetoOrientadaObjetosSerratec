package exerciciosIndividuais;

public class Caneta {
	public String modelo;
	public String cor;
	private float ponta;
	protected int carga;
	private boolean tampada;
	
	void status() {
		System.out.println("Modelo: " + modelo + "\nUma caneta: " + cor + "\nA ponta é: " + ponta + "\nEstá com carga: " + carga + "\nEstá tampada: " + tampada);
		
	}
	
	public void rabiscar () {
		if(this.tampada == true) {
			System.out.println("Não pode usar");
		} else {
			System.out.println("pode usar");
		}
		
	}
		
	public void tampar () {
		this.tampada = true;
	}
			
	public void destampar () {
		this.tampada = false;
		}
}




